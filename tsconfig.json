{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "./*" ],
      "@lib/*": [ "./lib/*" ],
      "@lib": [ "./lib/index.ts" ],
      "@util/*": [ "util/*" ],
      "@types": [ "types/index.ts" ]
    }
  },
  "include": [ "./src/**/*" ],
}